<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryDark">@color/dark_green_2</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="bottomSheetStyle">@style/BottomSheet.StyleDialog</item>
        <item name="android:navigationBarColor">@color/dark_green_2</item>
        <item name="android:button">@style/buttons</item>
    </style>


    <style name="AppTheme.puzzle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryDark">@color/dark_green_2</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="bottomSheetStyle">@style/BottomSheet.StyleDialog</item>
        <item name="android:button">@style/buttons</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>




    <style name="puzzletext" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">35sp</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/dark_green</item>
        <item name="android:textColorSecondary">@color/dark_green</item>
        <item name="android:textColorHint">@color/dark_green</item>
        <item name="bs_dialogBackground">@android:color/white</item>
        <item name="bs_dividerColor">@android:color/black</item>
        <item name="bs_numColumns">2</item>

    </style>


    <style name="buttons">
        <item name="android:background">@color/dark_green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
